#!/bin/sh
# postinst script for lliurex-menus
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#		* <postinst> `configure' <most-recently-configured-version>
#		* <old-postinst> `abort-upgrade' <new version>
#		* <conflictor's-postinst> `abort-remove' `in-favour' <package>
#		  <new-version>
#		* <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#		  <failed-install-package> <version> `removing'
#		  <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package
#

case "$1" in
	install | upgrade)
		
		LLIUREX_MENUS_OLD_FILES="/etc/xdg/menus/applications-merged/lliurex-musica.menu /etc/xdg/menus/applications-merged/lliurex-secundaria.menu /etc/xdg/menus/applications-merged/lliurex-administration.menu /etc/xdg/menus/applications-merged/lliurex-ciclos.menu /etc/xdg/menus/applications-merged/lliurex-educacion-especial.menu /etc/xdg/menus/applications-merged/lliurex-infantil.menu /etc/xdg/menus/applications-merged/settings.menu /etc/xdg/menus/applications-merged/ode-creation.menu /etc/xdg/menus/applications-merged/lliurex-preferences.menu /etc/xdg/menus/applications-merged/lliurex-laboratory.menu /etc/xdg/menus/applications-merged/lliurex-computational-thinking"

		for old_f in ${LLIUREX_MENUS_OLD_FILES}; do 
			
			if [ ! -L ${old_f} ] ; then
				echo "[ lliurex-menus ] : * Deleting : ${old_f}"
				rm -f ${old_f}
			fi
		done
		;;
	*)
		echo "postinst called with unknown argument \`$1'" >&2
		exit 0
	;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0

